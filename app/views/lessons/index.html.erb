<h1>Listing lessons</h1>

<table>
  <tr>
    <th>Teacher</th>
    <th>Student</th>
    <th>Time slot</th>
    <th>Start time</th>
    <th>End time</th>
    <th>Rounded time</th>
    <th>Student paid</th>
    <th>Teacher paid</th>
    <th>Token</th>
    <th>Session</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @lessons.each do |lesson| %>
  <tr>
    <td><%= lesson.teacher_id %></td>
    <td><%= lesson.student_id %></td>
    <td><%= lesson.time_slot_id %></td>
    <td><%= lesson.start_time %></td>
    <td><%= lesson.end_time %></td>
    <td><%= lesson.rounded_time %></td>
    <td><%= lesson.student_paid %></td>
    <td><%= lesson.teacher_paid %></td>
    <td><%= lesson.token %></td>
    <td><%= lesson.session_id %></td>
    <td><%= link_to 'Show', lesson %></td>
    <td><%= link_to 'Edit', edit_lesson_path(lesson) %></td>
    <td><%= link_to 'Destroy', lesson, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

