<div class="row">
  <div class="col-xs-6">
  <div class="panel panel-default pull-right">
    <div class="panel-body">
 
    <p> Scheduled Time </p>
        Start <%= lesson.time_slot.pretty_start%> <br /> 
        End <%= lesson.time_slot.pretty_end%> <br />
    <%=lesson.teacher.name%> <br />
    <%if lesson.start_time.blank?%>
      This lesson was never entered. <br />
    <!---<a href="/student/lesson?lesson_id=<%=lesson.id%>">View Lesson</a> <br />--->
    <a href="/lesson/lesson?lesson_id=<%=lesson.id%>">View Lesson</a> <br />

    <%else%>
    <%= lesson.start_time%> <br />
    <%= lesson.end_time%> <br />
    <%= lesson.rounded_time%> <br />

    <% if lesson.student_paid %>
    <p> This lesson has been paid for </p>
    <% else%>
    <p> You owe payment for this lesson! </p>
    <%end%>
    <%end%>
      </div>
    </div>
  </div> <!--COL--->
